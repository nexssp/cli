set -e
BASEDIR=$(dirname $0)
if grep "Microsoft" /proc/version &> /dev/null ; then
	# WSL
	# BASEDIR=${BASEDIR///mnt\/c/\C:}
	# BASEDIR=${BASEDIR//\//\\}
	# powershell.exe -noprofile -ex bypass -File "${BASEDIR}/nexss.ps1" "$@"
	node "${BASEDIR}/../nexss.js" "$@"
else
	# Linux
	node "${BASEDIR}/../nexss.js" "$@"
fi	
